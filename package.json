{
  "name": "serenamente-monorepo",
  "version": "1.0.0",
  "description": "Event ticketing platform - monorepo with frontend and backend",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "pnpm@8.12.0",
  "scripts": {
    "dev": "concurrently \"pnpm --filter frontend dev\" \"pnpm --filter backend dev\"",
    "dev:frontend": "pnpm --filter frontend dev",
    "dev:backend": "pnpm --filter backend dev",
    "kill-be-port": "pnpm --filter backend kill-port",
    "build": "pnpm --filter backend build && pnpm --filter frontend build",
    "build:frontend": "pnpm --filter frontend build",
    "build:backend": "pnpm --filter backend build",
    "start": "concurrently \"pnpm --filter backend start\" \"pnpm --filter frontend start\"",
    "start:frontend": "pnpm --filter frontend start",
    "start:backend": "pnpm --filter backend start",
    "test": "pnpm --filter backend test && pnpm --filter frontend test",
    "test:frontend": "pnpm --filter frontend test",
    "test:backend": "pnpm --filter backend test",
    "lint": "pnpm --filter backend lint && pnpm --filter frontend lint",
    "lint:fix": "pnpm --filter backend lint:fix && pnpm --filter frontend lint:fix",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint:biome": "biome lint .",
    "lint:biome:fix": "biome lint --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "clean": "pnpm --filter backend clean && pnpm --filter frontend clean",
    "db:migrate": "pnpm --filter backend db:migrate",
    "db:generate": "pnpm --filter backend db:generate",
    "db:push": "pnpm --filter backend db:push",
    "db:seed": "pnpm --filter backend db:seed",
    "docker:up": "docker compose -f apps/backend/docker-compose.yml up -d",
    "docker:down": "docker compose -f apps/backend/docker-compose.yml down",
    "docker:logs": "docker compose -f apps/backend/docker-compose.yml logs -f",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.2",
    "@types/node": "^20.10.5",
    "concurrently": "^8.2.2",
    "husky": "^9.1.7",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "keywords": [
    "monorepo",
    "event-ticketing",
    "react",
    "express",
    "typescript",
    "prisma",
    "stripe"
  ],
  "author": "Serenamente Team",
  "license": "MIT"
}
